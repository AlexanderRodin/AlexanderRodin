<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/btn_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:fontFamily">@font/allerta_stencil</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">@dimen/_corner_radius</item>
    </style>

    <style name="ButtonStyle_SMO" parent="ButtonStyle">
        <item name="android:layout_weight">3</item>
    </style>

    <style name="ButtonStyle_CE" parent="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Textview_Style">
        <item name="android:layout_width">match_parent</item>>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_margin">@dimen/text_size_margin</item>
        <item name="android:background">@color/back_textView</item>
        <item name="android:fontFamily">@font/allerta_stencil</item>>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/text_size</item>>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/_corner_radius</item>>
    </style>
    >
</resources>